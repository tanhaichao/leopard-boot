<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DEBUG</level>
		</filter>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread]logback2 %-5level %C - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="ch.qos.logback" level="OFF">
	</logger>
	<logger name="com.vbp.chufang" level="OFF">
	</logger>

	<logger name="org.springframework.test" level="OFF">
	</logger>
	<logger name="org.springframework.web.servlet.handler" level="OFF" >
	</logger>
	<logger name="io.leopard.boot.responsebody" level="WARN">
	</logger>

	<logger name="org.springframework.context.support" level="WARN">
	</logger>


	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>